@model TaskManager.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h2>Detalhes</h2>

<hr/>
<br/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Id)
        </dt>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Titulo)
        </dt>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Descricao)
        </dt>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Data)
        </dt>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Status)
        </dt>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </div>
