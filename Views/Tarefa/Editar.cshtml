@model TaskManager.Models.Tarefa

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar Tarefa</h2>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" type="datetime-local" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()">
                </select>
            </div>
            <br>    
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>
<br>
<a asp-action="ObterTodos" asp-route-id="@Model.Id">Voltar</a>